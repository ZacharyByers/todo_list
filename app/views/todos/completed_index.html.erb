<h1>Completed Tasks</h1>

<% @todos.each do |todo| %>
  <% if todo.complete? %>
    <%= link_to todo.title, todo_path(todo) %>
    <%= link_to 'Edit', edit_todo_path(todo) %>
    <%= link_to 'Delete', todo_path(todo),
          method: :delete,
          data: { confirm: 'Really Delete?'} %>
  <% end %>
  <br/>
<% end %>


<%= link_to 'All Tasks', todos_path %>
